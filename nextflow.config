params {
    // Laetiporus sulphureus ( 37MB; Fungus )
    bam = 'ftp://ftp.sra.ebi.ac.uk/vol1/run/ERR680/ERR6808041/m64229e_210602_121910.ccs.bc1020_BAK8B_OA--bc1020_BAK8B_OA.bam'
}

includeConfig 'conf/base.config'

process {
    withName: 'EVALUATE_EFFICIENCY' {
        publishDir = [
            path: 'results/metrics',
            mode: 'copy'
        ]
    }
}

profiles {
    hpc {
        params.project = null
        process.executor = 'slurm'
        process.clusterOptions = { "-A ${params.project}" }
        singularity.enabled = true
        singularity.autoMounts = true
    }
}